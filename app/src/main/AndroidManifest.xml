<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.awebber.grocery" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GrocerySearchActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <provider
            android:name=".data.GroceryContentProvider"
            android:authorities="com.example.awebber.grocery"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <activity
            android:name=".GroceryDetailActivity"
            android:label="@string/title_activity_grocery_detail"
            android:parentActivityName=".GrocerySearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GrocerySearchActivity" />
        </activity>
        <activity
            android:name=".GroceryMainActivity"
            android:theme="@style/GroceryTheme"
            android:label="@string/title_activity_grocery_main" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroceryInventoryActivity"
            android:label="@string/title_activity_grocery_inventory" >
        </activity>
        <activity
            android:name=".GroceryCategoryActivity"
            android:label="@string/title_activity_grocery_category" >
        </activity>
        <activity
            android:name=".GroceryAddCategoryActivity"
            android:label="@string/title_activity_grocery_add_category"
            android:parentActivityName=".GroceryCategoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.awebber.grocery.GroceryCategoryActivity" />
        </activity>
    </application>

</manifest>
